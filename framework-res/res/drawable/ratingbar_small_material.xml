<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/background">
        <bitmap android:src="@drawable/ic_star_black_16dp" android:tint="?colorControlNormal" android:alpha="?disabledAlpha" />
    </item>
    <item android:id="@id/secondaryProgress">
        <bitmap android:src="@drawable/ic_star_half_black_16dp" android:tint="?colorControlActivated" />
    </item>
    <item android:id="@id/progress">
        <bitmap android:src="@drawable/ic_star_black_16dp" android:tint="?colorControlActivated" android:tileModeX="repeat" />
    </item>
</layer-list>