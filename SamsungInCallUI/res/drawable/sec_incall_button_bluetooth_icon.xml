    <item android:state_checked="false">
        <bitmap android:src="@drawable/voicecall_during_ic_bluetooth" android:tint="@color/sec_incall_button_off_tint" />
    </item>
    <item android:drawable="@drawable/voicecall_during_ic_bluetooth" />
