    <item android:state_enabled="false">
        <bitmap android:src="@drawable/voicecall_during_ic_bluetooth" android:alpha="0.4" />
    </item>
    <item android:state_checked="true">
        <bitmap android:src="@drawable/voicecall_during_ic_bluetooth_on" />
