<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="false">
        <bitmap android:src="@drawable/voicecall_during_ic_record" android:alpha="0.4" />
    </item>
    <item android:state_enabled="false" android:state_checked="true">
        <bitmap android:src="@drawable/voicecall_during_ic_stop" android:alpha="0.4" />
    </item>
    <item android:state_checked="false" android:drawable="@drawable/voicecall_during_ic_record" />
    <item android:state_checked="true" android:drawable="@drawable/voicecall_during_ic_stop" />
</selector>