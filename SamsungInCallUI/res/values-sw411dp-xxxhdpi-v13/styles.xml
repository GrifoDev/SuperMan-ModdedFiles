<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SecDialpadKeyNumberStyle">
        <item name="android:textSize">@dimen/sec_dialpad_key_numbers_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/sec_dialpad_primary_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="SecPopupButtonIconStyle">
        <item name="android:textSize">@dimen/sec_call_popup_button_text_size_with_icon</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/sec_popup_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">@dimen/sec_call_popup_button_three_icon_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawablePadding">@dimen/sec_call_popup_button_drawable_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sec-roboto-light</item>
    </style>
</resources>
