<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppSearchIcon" parent="@style/BaseMenuIcon">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">@dimen/appsearch_list_item_margin_top</item>
        <item name="android:paddingBottom">@dimen/appsearch_grid_cell_padding</item>
        <item name="android:focusable">false</item>
        <item name="android:lines">@integer/appsearch_lines</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:fontFamily">Roboto_Regular</item>
    </style>
    <style name="BaseHomeIcon">
        <item name="android:textColor">@color/home_menu_icon_text_color</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:background">@drawable/focusable_view_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/home_menu_icon_text_shadow_color</item>
        <item name="android:shadowDy">0.1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="destination">home</item>
    </style>
    <style name="BaseHotseatIcon">
        <item name="android:textColor">@color/home_menu_icon_text_color</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:background">@drawable/focusable_view_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/home_menu_icon_text_shadow_color</item>
        <item name="android:shadowDy">0.1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="destination">hotseat</item>
    </style>
    <style name="BaseMenuIcon">
        <item name="android:textColor">@color/home_menu_icon_text_color</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:background">@drawable/focusable_view_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/home_menu_icon_text_shadow_color</item>
        <item name="android:shadowDy">0.1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="destination">menu</item>
    </style>
    <style name="EditBarCircle">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/home_edit_bar_focus_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="MoveAppsIcon">
        <item name="android:textColor">@color/moveApps_label_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:background">@drawable/focusable_view_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">Roboto_Regular</item>
        <item name="destination">moveApps</item>
    </style>
</resources>
