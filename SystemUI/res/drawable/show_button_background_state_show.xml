<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/notification_panel_theme_ripple_color"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <inset android:insetTop="@dimen/noti_setting_and_clear_show_button_bg_inset" android:insetBottom="@dimen/noti_setting_and_clear_show_button_bg_inset"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <shape android:shape="rectangle">
                <corners android:radius="2.0dip" />
                <stroke android:width="2.0px" android:color="#4d000000" />
            </shape>
        </inset>
    </item>
    <item android:id="@android:id/mask">
        <inset android:insetTop="@dimen/noti_setting_and_clear_show_button_bg_inset" android:insetBottom="@dimen/noti_setting_and_clear_show_button_bg_inset"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <shape android:shape="rectangle">
                <corners android:radius="2.0dip" />
                <solid android:color="@android:color/white" />
                <padding android:left="@dimen/carrier_and_clear_side_padding" android:right="@dimen/carrier_and_clear_side_padding" />
            </shape>
        </inset>
    </item>
</ripple>