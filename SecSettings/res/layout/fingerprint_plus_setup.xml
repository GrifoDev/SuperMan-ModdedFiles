            <TextView android:textSize="@dimen/register_text_first_textSize" android:textColor="@color/fingerprint_plus_desc_text_color" android:gravity="center_horizontal" android:id="@id/register_text_second" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/register_text_marginTop" android:text="@string/fingerprint_plus_setup_text_second" android:layout_below="@id/register_text_first" android:lineSpacingExtra="@dimen/fingerprint_plus_textLineSpace" android:fontFamily="roboto-regular" />
