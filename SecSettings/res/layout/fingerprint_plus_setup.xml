    </ScrollView>
    <RelativeLayout android:id="@id/bottom_button_layout" android:layout_width="fill_parent" android:layout_height="@dimen/finger_plus_enroll_guide_bottombar_height" android:layout_alignParentBottom="true">
        <View android:id="@id/view" android:background="@color/fingerprint_indicator_background_resting" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <TextView android:textSize="@dimen/finger_plus_enroll_guide_text_size" android:textStyle="bold" android:textColor="@color/fingerprint_plus_title_text_color" android:gravity="center" android:id="@id/guide_bottom_bar" android:focusable="true" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/start_finger_plus_enroll" android:layout_below="@id/view" android:textAllCaps="true" android:fontFamily="roboto-bold" />
    </RelativeLayout>
</RelativeLayout>