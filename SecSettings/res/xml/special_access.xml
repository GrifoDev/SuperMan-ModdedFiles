    <SecPreference android:title="@string/usage_access" android:key="usage_access" android:fragment="com.android.settings.applications.ManageApplications" settings:keywords="@string/keywords_write_settings">
        <extra android:name="classname" android:value="com.android.settings.Settings$UsageAccessSettingsActivity" />
    </SecPreference>
    <SecPreference android:title="@string/install_other_apps" android:key="manage_external_sources" android:fragment="com.android.settings.applications.ManageApplications" settings:keywords="@string/keywords_install_other_apps">
