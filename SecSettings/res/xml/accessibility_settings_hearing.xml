    <SecPreference android:title="@string/real_time_text_title" android:key="real_time_text" />
    <SecPreference android:title="@string/sound_detector_main_title" android:key="sound_detector_plus_preference" android:summary="@string/sound_detector_main_description" />
    <SecSwitchPreference android:persistent="false" android:title="@string/flash_notification" android:key="flash_notification_key" android:summary="@string/flash_notification_summary" />
