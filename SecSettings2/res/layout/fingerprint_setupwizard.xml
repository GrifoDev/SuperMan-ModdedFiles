<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/status" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
        <RelativeLayout android:id="@id/header_area" android:background="@drawable/fingerprint_setupwizard_header_bg" android:layout_width="fill_parent" android:layout_height="@dimen/fingerprint_setupwizard_header_height">
            <FrameLayout android:layout_width="@dimen/fingerprint_setupwizard_header_image_width" android:layout_height="@dimen/fingerprint_setupwizard_header_image_height" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
                <ImageView android:id="@id/header_image" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/fingerprint_setupwizard_header_image" />
                <RelativeLayout android:id="@id/fingerprint_effect_container" android:layout_width="fill_parent" android:layout_height="fill_parent">
                    <ImageView android:id="@id/fingerprint_image" android:background="@anim/fingerprint_effect" android:layout_width="@dimen/fingerprint_setupwizard_header_fingeprint_image_width" android:layout_height="@dimen/fingerprint_setupwizard_header_fingeprint_image_height" android:layout_marginRight="@dimen/fingerprint_setupwizard_header_fingeprint_image_margin_end" android:layout_marginBottom="@dimen/fingerprint_setupwizard_header_fingeprint_image_margin_bottom" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
        <LinearLayout android:id="@id/title" android:background="#ff56b3da" android:layout_width="fill_parent" android:layout_height="@dimen/fingerprint_setupwizard_title_height" android:layout_marginTop="@dimen/fingerprint_setupwizard_header_height" android:elevation="@dimen/fingerprint_setupwizard_title_shadow_elevation">
            <TextView android:textSize="@dimen/fingerprint_setupwizard_title_text_size" android:textColor="#fffafafa" android:gravity="center_vertical" android:id="@id/title_text" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="@dimen/fingerprint_setupwizard_title_marginTop" android:layout_marginBottom="@dimen/fingerprint_setupwizard_title_marginBottom" android:text="@string/fingerprint_setupwizard_title" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/fingerprint_setupwizard_layout_marginStart" android:layout_marginEnd="@dimen/fingerprint_setupwizard_layout_marginEnd" />
        </LinearLayout>
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/title">
            <LinearLayout android:id="@id/description" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/fingerprint_setupwizard_description_text_size" android:textColor="#ff313131" android:id="@id/description_text" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="@dimen/fingerprint_setupwizard_description_margintop" android:text="@string/fingerprint_setupwizard_description" android:lineSpacingExtra="@dimen/fingerprint_setupwizard_description_lineSpacingExtra" android:fontFamily="sec-roboto-light" android:layout_marginStart="@dimen/fingerprint_setupwizard_layout_marginStart" android:layout_marginEnd="@dimen/fingerprint_setupwizard_layout_marginEnd" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <View android:id="@id/bottom_button_bar" android:background="#ffd4d4d4" android:layout_width="fill_parent" android:layout_height="@dimen/fingerprint_setupwizard_button_divider_height" />
    <RelativeLayout android:layout_gravity="bottom" android:orientation="horizontal" android:id="@id/button_area" android:background="#fffafafa" android:layout_width="fill_parent" android:layout_height="@dimen/fingerprint_setupwizard_button_height">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/later_btn" android:background="@drawable/ripple_setupwizard_next_btn" android:focusable="true" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingStart="@dimen/fingerprint_setupwizard_button_later_paddingStart" android:paddingEnd="@dimen/fingerprint_setupwizard_button_later_paddingEnd" android:layout_marginStart="@dimen/fingerprint_setupwizard_button_later_marginStart" android:layout_alignParentStart="true">
            <TextView android:textSize="@dimen/fingerprint_setupwizard_button_text_size" android:textColor="#ff767879" android:id="@id/later_btn_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fingerprint_setupwizard_later" android:fontFamily="sans-serif" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/register_btn" android:background="@drawable/ripple_setupwizard_next_btn" android:focusable="true" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingStart="@dimen/fingerprint_setupwizard_button_register_paddingStart" android:paddingEnd="@dimen/fingerprint_setupwizard_button_register_paddingEnd" android:layout_marginEnd="@dimen/fingerprint_setupwizard_button_register_marginEnd" android:layout_alignParentEnd="true">
            <TextView android:textSize="@dimen/fingerprint_setupwizard_button_text_size" android:textColor="#ff4e4f50" android:id="@id/register_btn_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_add" android:textAllCaps="true" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/fingerprint_setupwizard_button_register_text_marginStart" android:layout_marginEnd="@dimen/fingerprint_setupwizard_button_register_text_marginEnd" />
            <ImageView android:id="@id/register_arrow" android:layout_width="@dimen/fingerprint_setupwizard_button_register_arrow_width" android:layout_height="@dimen/fingerprint_setupwizard_button_register_arrow_height" android:src="@drawable/setupwizard_next_arrow_auto_mirrored" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>