<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_weight="1.0">
        <com.android.settings.widget.SwitchBar android:theme="?switchBarTheme" android:id="@id/switch_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <FrameLayout android:id="@id/main_content" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
    <RelativeLayout android:id="@id/button_bar" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0.0">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:weightSum="0.0" style="@style/SecurityPreferenceButtonContainer">
            <com.samsung.android.settings.widget.BottomBarButton android:textSize="@dimen/bottom_btn_font_size" android:id="@id/back_button" android:layout_width="fill_parent" android:text="@string/back_button_label" style="@style/SecurityPreferenceButton" />
            <com.samsung.android.settings.widget.BottomBarButton android:textSize="@dimen/bottom_btn_font_size" android:id="@id/skip_button" android:visibility="gone" android:layout_width="fill_parent" android:text="@android:string/skip_button_label" style="@style/SecurityPreferenceButton" />
            <com.samsung.android.settings.widget.BottomBarButton android:textSize="@dimen/bottom_btn_font_size" android:id="@id/next_button" android:layout_width="fill_parent" android:text="@string/next_button_label" style="@style/SecurityPreferenceButton" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>